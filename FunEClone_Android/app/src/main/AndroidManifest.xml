    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.FunEClone_Nhom8"
        tools:replace="android:theme"
        android:usesCleartextTraffic="true"
        tools:targetApi="31">
        <activity
            android:name=".Views.Activitys.LiveStreamActivity"
            android:exported="true" />
        <activity
            android:name=".Views.Activitys.OrderSummaryActivity"
            android:exported="false" />
        <activity
            android:name=".Views.Activitys.CheckoutActivity"
            android:exported="false" />
        <activity
            android:name=".Views.Activitys.CartActivity"
            android:exported="false" />
        <activity
            android:name=".Views.Activitys.AddPaymentActivity"
            android:exported="true" />
        <activity
            android:name=".Views.Activitys.PaymentActivity"
            android:exported="false" />
        <activity
            android:name=".Views.Activitys.ProductDetailActivity"
            android:exported="false" />
        <activity
            android:name=".Views.Activitys.SignupSellerActivity"
            android:exported="false" />
        <activity
            android:name=".Views.Activitys.VideoPostActivity"
            android:exported="true" />
        <activity
            android:name=".Views.Activitys.SignupActivity"
            android:exported="true" />
        <activity
            android:name=".Views.Activitys.SigninActivity"
            android:exported="true" />
        <activity
            android:name=".Views.Activitys.HomeActivity"
            android:exported="true"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".Views.Activitys.EditProfileActivity"
            android:exported="true" />
        <activity
            android:name=".Views.Activitys.ProfileActivity"
            android:exported="false" />
        <activity
            android:name=".Views.Activitys.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>