<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Views.Activitys.SignupSellerActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seller Sign Up"
            android:textSize="24sp"
            android:textColor="@color/black"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:padding="4dp"
            android:background="@drawable/bg_input_text_area">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/contact_details_bottom">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/email"/>
                <EditText
                    android:id="@+id/edt_name_edit_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Enter your name"
                    android:textSize="14sp"
                    android:background="@android:color/transparent"
                    android:paddingHorizontal="15dp"/>
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/btn_date_of_birth"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/contact_details_bottom">
                <ImageView
                    android:id="@+id/calendar_image_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:adjustViewBounds="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/calendar"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Date of birth"
                    android:layout_toRightOf="@id/calendar_image_profile"
                    android:paddingHorizontal="15dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/down_date_picker_profile"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    android:src="@drawable/down"/>
            </RelativeLayout>
            <DatePicker
                android:id="@+id/date_picker_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:visibility="gone"
                android:calendarViewShown="false"/>
            <RelativeLayout
                android:id="@+id/btn_gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/contact_details_bottom">
                <ImageView
                    android:id="@+id/gender_image_profile"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:adjustViewBounds="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/gender"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Gender"
                    android:layout_toRightOf="@id/gender_image_profile"
                    android:paddingHorizontal="15dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/down_gender_profile"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    android:src="@drawable/down"/>
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/choose_gender"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/contact_details_bottom"
                android:visibility="gone">
                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">
                        <RadioButton
                            android:id="@+id/radio_male"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_main_button"
                            android:text="Male"
                            android:checked="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:paddingHorizontal="15dp"/>
                        <RadioButton
                            android:id="@+id/radio_female"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_main_button"
                            android:text="Female"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_alignParentRight="true"
                            android:paddingHorizontal="15dp"/>
                    </RelativeLayout>
                </RadioGroup>
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/btn_address"
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <ImageView
                    android:id="@+id/imageview"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:adjustViewBounds="true"
                    android:layout_alignParentLeft="true"
                    android:src="@drawable/location"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:hint="Address"
                    android:layout_toRightOf="@id/imageview"
                    android:paddingHorizontal="15dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp" />
                <ImageView
                    android:id="@+id/down_address"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:padding="15dp"
                    android:src="@drawable/down"/>
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:visibility="visible"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2">
                    <EditText
                        android:id="@+id/zip_code"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/bg_grey"
                        android:hint="Zip code"/>
                    <EditText
                        android:id="@+id/floor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/bg_grey"
                        android:layout_marginStart="15dp"
                        android:hint="Floor"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:weightSum="2">
                    <EditText
                        android:id="@+id/unit"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/bg_grey"
                        android:hint="Unit"/>
                    <EditText
                        android:id="@+id/block_number"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:inputType="number"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/bg_grey"
                        android:layout_marginStart="15dp"
                        android:hint="Block No."/>
                </LinearLayout>

                <EditText
                    android:id="@+id/road_name"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_grey"
                    android:layout_marginVertical="15dp"
                    android:hint="Road name"/>

                <EditText
                    android:id="@+id/building"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:paddingHorizontal="15dp"
                    android:background="@drawable/bg_grey"
                    android:layout_marginBottom="15dp"
                    android:hint="Bulding"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:weightSum="2">
                    <EditText
                        android:id="@+id/state"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/bg_grey"
                        android:hint="State"/>
                    <EditText
                        android:id="@+id/city"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        android:paddingHorizontal="15dp"
                        android:background="@drawable/bg_grey"
                        android:layout_marginStart="15dp"
                        android:hint="City"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email Address *"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/edt_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/bg_input_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank Account Holder Name *"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/edt_holder_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/bg_input_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank Account Number *"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/edt_account_number"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:textSize="14sp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/bg_input_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bank Account Identifier Code *"
                android:textColor="@color/black"
                android:layout_marginBottom="5dp"/>
            <EditText
                android:id="@+id/edt_account_code"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:textSize="14sp"
                android:paddingHorizontal="15dp"
                android:background="@drawable/bg_input_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Location *"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/spinner_bank_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Currency *"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="10dp"/>
            <Spinner
                android:id="@+id/spinner_bank_currency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <Button
            android:id="@+id/btn_signup"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="SIGN UP"
            android:layout_marginBottom="15dp"
            android:background="@drawable/bg_main_button"
            app:backgroundTint="@null"/>
    </LinearLayout>
</ScrollView>