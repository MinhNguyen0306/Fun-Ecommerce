<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activitys.PaymentActivity">
    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="25dp"
        android:paddingHorizontal="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:orientation="horizontal"
        android:gravity="center">
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="start|center_vertical">
            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/back"/>
        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="end|center_vertical"
            >
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/heart"/>
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:background="@drawable/coin"
                android:layout_marginHorizontal="20dp"/>
            <RelativeLayout
                android:layout_width="34dp"
                android:layout_height="34dp">
                <ImageButton
                    android:id="@+id/btn_cart"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/shopping_cart"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/count"
                    android:text="1"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:paddingVertical="1dp"
                    android:paddingHorizontal="6dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_payment_method"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/linear_layout"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/btn_add_another_method"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/bg_main_button"
        app:backgroundTint="@null"
        android:layout_marginHorizontal="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="15dp"
        android:text="ADD ANOTHER METHOD"/>
</androidx.constraintlayout.widget.ConstraintLayout>