<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".Views.Activitys.ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--  HEADER  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="25dp"
            android:paddingHorizontal="20dp"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical">
                <ImageButton
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:background="@drawable/back"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Profile"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/black"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="15dp"
            android:background="@color/white">
            <RelativeLayout
                android:id="@+id/btn_open_avatar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_profile"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/hoacuc"/>
                <ImageView
                    android:layout_width="24sp"
                    android:layout_height="24dp"
                    android:layout_alignRight="@+id/image_profile"
                    android:layout_alignBottom="@+id/image_profile"
                    android:src="@drawable/add_image_icon"/>
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Update Cover Media"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="15dp"
                android:background="@drawable/update_cover_media">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/upload"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let's upload photos and videos"
                    android:textStyle="italic"
                    android:textSize="14sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/grey"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">
                    <Button
                        android:id="@+id/btn_open_gallery"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="open gallery"
                        android:textSize="14sp"
                        android:backgroundTint="@color/black"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/upload"
                        android:layout_marginRight="10dp"
                        android:textAllCaps="true"/>
                    <Button
                        android:id="@+id/btn_open_camera"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="open camera"
                        android:textSize="14sp"
                        android:backgroundTint="@color/black"
                        android:textStyle="bold"
                        android:drawableLeft="@drawable/upload"
                        android:textAllCaps="true"/>
                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="15dp"
                    app:cardCornerRadius="15dp">
                    <ImageView
                        android:id="@+id/cover_image_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/hoacuc"/>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add description"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:textStyle="bold"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="15dp"
                android:background="@drawable/bg_input_text_area"
                android:hint="Say something..." />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:background="@drawable/bg_input_text_area"
                android:padding="5dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/contact_details_bottom">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/email"/>
                    <EditText
                        android:id="@+id/edt_name_edit_profile"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your name"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="15dp"/>
                </LinearLayout>
                <RelativeLayout
                    android:id="@+id/btn_date_of_birth"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/contact_details_bottom">
                    <ImageView
                        android:id="@+id/calendar_image_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/calendar"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Date of birth"
                        android:layout_toRightOf="@id/calendar_image_profile"
                        android:paddingHorizontal="15dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/down_date_picker_profile"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="15dp"
                        android:src="@drawable/down"/>
                </RelativeLayout>
                <DatePicker
                    android:id="@+id/date_picker_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:datePickerMode="spinner"
                    android:visibility="gone"
                    android:calendarViewShown="false"/>
                <RelativeLayout
                    android:id="@+id/btn_gender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/contact_details_bottom">
                    <ImageView
                        android:id="@+id/gender_image_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:adjustViewBounds="true"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/gender"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:hint="Gender"
                        android:layout_toRightOf="@id/gender_image_profile"
                        android:paddingHorizontal="15dp"
                        android:gravity="center_vertical"
                        android:textSize="14sp" />
                    <ImageView
                        android:id="@+id/down_gender_profile"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:padding="15dp"
                        android:src="@drawable/down"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/choose_gender"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@drawable/contact_details_bottom"
                    android:visibility="gone">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="5dp">
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_main_button"
                            android:text="Male"
                            android:checked="true"
                            android:layout_alignParentLeft="true"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:paddingHorizontal="15dp"/>
                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/bg_main_button"
                            android:text="Female"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:layout_alignParentRight="true"
                            android:paddingHorizontal="15dp"/>
                    </RelativeLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">
                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="Enter your job"
                        android:textSize="14sp"
                        android:background="@android:color/transparent"
                        android:paddingHorizontal="15dp"/>
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/btn_update_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="update"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:paddingVertical="10dp"
                android:background="@drawable/bg_main_button"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>